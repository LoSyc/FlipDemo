<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragmentContainer"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:id="@+id/havingPanel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

        <org.losyc.android.flipcopy.util.FontIconButton
                android:id="@+id/topbar_alling"
                android:textColor="@color/grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:textSize="24sp"
                android:text="@string/ficon_alling" />
        <org.losyc.android.flipcopy.util.FontIconButton
                android:id="@+id/topbar_user"
                android:textColor="@color/grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:textSize="24sp"
                android:text="@string/ficon_user" />
        <org.losyc.android.flipcopy.util.FontIconButton
                android:id="@+id/topbar_account"
                android:textColor="@color/grey"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:textSize="24sp"
                android:text="@string/ficon_account" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/havingViewPagerContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
</LinearLayout>